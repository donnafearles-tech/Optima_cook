rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite a los usuarios autenticados leer y escribir en su propia carpeta
    // dentro del directorio 'users/'. La ruta del archivo puede tener cualquier anidamiento.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
