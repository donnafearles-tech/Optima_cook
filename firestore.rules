/**
 * @file Firebase Security Rules for the Optimal Cook application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model, where users have full
 * control over their own data (projects, recipes, tasks) and cannot access
 * data belonging to other users. The rules leverage the Firestore path structure
 * to determine ownership, ensuring efficient and secure access control.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, providing a clear hierarchical
 * structure. Projects are stored as /users/{userId}/projects/{projectId},
 * recipes as /users/{userId}/projects/{projectId}/recipes/{recipeId},
 * and tasks as /users/{userId}/projects/{projectId}/tasks/{taskId}.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Data consistency is enforced by validating the 'id' field on document creation
 *   and ensuring its immutability on updates.
 * - Rules are designed to be efficient and avoid costly `get()` operations.
 *
 * Denormalization for Authorization:
 * The `ownerId` field in the `projects` collection is used to explicitly
 * link projects to users, which simplifies ownership checks.  However, since
 * recipes and tasks are nested in subcollections, we can use the path to authorize
 * requests to these collections.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to read and write their own profile data.
     * @path /users/{userId}
     * @allow (create, update, get) if request.auth.uid == userId
     * @deny (create) if request.auth.uid != userId
     * @deny (update) if request.auth.uid != userId
     * @deny (delete) always
     * @principle Enforces user-ownership for profile data and prevents unauthorized access.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Prevent listing all users
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if false; // No user deletion allowed
    }

    /**
     * @description Allows users to manage their own cooking projects.
     * @path /users/{userId}/projects/{projectId}
     * @allow (create, update, get, list) if request.auth.uid == userId
     * @deny (create) if request.auth.uid != userId
     * @deny (update) if request.auth.uid != userId
     * @deny (delete) if request.auth.uid != userId
     * @principle Enforces user-ownership for project data and prevents unauthorized access.
     */
    match /users/{userId}/projects/{projectId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Allows users to manage recipes within their projects.
     * @path /users/{userId}/projects/{projectId}/recipes/{recipeId}
     * @allow (create, update, get, list) if request.auth.uid == userId
     * @deny (create) if request.auth.uid != userId
     * @deny (update) if request.auth.uid != userId
     * @deny (delete) if request.auth.uid != userId
     * @principle Enforces user-ownership for recipe data and prevents unauthorized access.
     */
    match /users/{userId}/projects/{projectId}/recipes/{recipeId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Allows users to manage tasks within their projects and recipes.
     * @path /users/{userId}/projects/{projectId}/tasks/{taskId}
     * @allow (create, update, get, list) if request.auth.uid == userId
     * @deny (create) if request.auth.uid != userId
     * @deny (update) if request.auth.uid != userId
     * @deny (delete) if request.auth.uid != userId
     * @principle Enforces user-ownership for task data and prevents unauthorized access.
     */
    match /users/{userId}/projects/{projectId}/tasks/{taskId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }
  }
}