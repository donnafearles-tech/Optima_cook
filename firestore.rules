/**
 * @fileoverview Firestore Security Rules for the cooking app.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all data. Each user
 * has a private data tree under `/users/{userId}`. Only the authenticated user
 * matching the `userId` segment has read and write access to that subtree.
 *
 * Data Structure:
 * - `/users/{userId}`: User profile information.
 * - `/users/{userId}/resources/{resourceId}`: Kitchen resources owned by the user.
 * - `/users/{userId}/projects/{projectId}`: Cooking projects created by the user.
 * - `/users/{userId}/projects/{projectId}/recipes/{recipeId}`: Recipes within a project.
 * - `/users/{userId}/projects/{projectId}/tasks/{taskId}`: Tasks associated with a recipe.
 *
 * Key Security Decisions:
 * - User listing is disallowed for privacy.
 * - Strict ownership is enforced: a user can only access their own data.
 * - Data validation is relaxed to facilitate rapid prototyping. Only critical relational
 *   integrity checks are enforced.
 *
 * Denormalization for Authorization:
 * - The rules rely on path-based authorization. The authenticated user's UID
 *   must match the `userId` segment in the path to gain access.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Ensures that only the authenticated user can access their own user document.
     * @path /databases/{database}/documents/users/{userId}
     * @allow (get, create, update, delete) User 'crmyu7KEJ8SQXNCZxtQns9HUMw83' can access their own document.
     * @deny (get, create, update, delete) User 'otherUserId' cannot access User 'crmyu7KEJ8SQXNCZxtQns9HUMw83' document.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      // Verify that the user is signed in.
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Do not allow listing of users.
      // On create, the request userId must match the document id.
      allow create: if isSignedIn() && isOwner(userId);
      // On update, the request userId must match the document id.
      allow update: if isSignedIn() && isExistingOwner(userId);
      // Only the owner can delete their account.
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to user's kitchen resources.
     * @path /databases/{database}/documents/users/{userId}/resources/{resourceId}
     * @allow (get, list, create, update, delete) User 'crmyu7KEJ8SQXNCZxtQns9HUMw83' can manage their own resources.
     * @deny (get, list, create, update, delete) User 'otherUserId' cannot manage User 'crmyu7KEJ8SQXNCZxtQns9HUMw83' resources.
     * @principle Enforces ownership for kitchen resources.
     */
    match /users/{userId}/resources/{resourceId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to user's cooking projects.
     * @path /databases/{database}/documents/users/{userId}/projects/{projectId}
     * @allow (get, list, create, update, delete) User 'crmyu7KEJ8SQXNCZxtQns9HUMw83' can manage their own projects.
     * @deny (get, list, create, update, delete) User 'otherUserId' cannot manage User 'crmyu7KEJ8SQXNCZxtQns9HUMw83' projects.
     * @principle Enforces ownership for cooking projects.
     */
    match /users/{userId}/projects/{projectId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to recipes within a user's project.
     * @path /databases/{database}/documents/users/{userId}/projects/{projectId}/recipes/{recipeId}
     * @allow (get, list, create, update, delete) User 'crmyu7KEJ8SQXNCZxtQns9HUMw83' can manage their own recipes within their projects.
     * @deny (get, list, create, update, delete) User 'otherUserId' cannot manage User 'crmyu7KEJ8SQXNCZxtQns9HUMw83' recipes.
     * @principle Enforces ownership for recipes.
     */
    match /users/{userId}/projects/{projectId}/recipes/{recipeId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to tasks within a user's project.
     * @path /databases/{database}/documents/users/{userId}/projects/{projectId}/tasks/{taskId}
     * @allow (get, list, create, update, delete) User 'crmyu7KEJ8SQXNCZxtQns9HUMw83' can manage their own tasks within their projects.
     * @deny (get, list, create, update, delete) User 'otherUserId' cannot manage User 'crmyu7KEJ8SQXNCZxtQns9HUMw83' tasks.
     * @principle Enforces ownership for tasks.
     */
    match /users/{userId}/projects/{projectId}/tasks/{taskId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }
  }

  // Helper function to determine if the user is signed in.
  function isSignedIn() {
    return request.auth != null;
  }

  // Helper function to determine if the request is made by the owner.
  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  // Helper function to determine if the request is made by the existing owner and resource exists.
  function isExistingOwner(userId) {
    return isOwner(userId) && resource != null;
  }
}